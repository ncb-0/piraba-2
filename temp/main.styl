// vars
$pira-red  = #d20
$pira-pink = #f5cdca
$mega-font = "Mega", system-ui, "Helvetica Neue", "Helvetica", sans-serif
// animations
@keyframes blink
  0%
    opacity 0
  50%
    opacity 1
// general
*
  margin 0
  padding 0
  box-sizing border-box
  user-select none
  color $pira-red
  // font-feature-settings "ss02"
::selection
  background alpha($pira-red,0.2)
::-webkit-scrollbar
  display none
body
  background #fff
  // padding 10px
  // height 100vh
// font styles
p, table th, table td
  font 500 14px/16px $mega-font
  letter-spacing 0.35px
p  
  margin-bottom 6px
a
  text-decoration none
a::after
  content "↗"
a:hover::after
  animation blink .1s step-end 0s forwards infinite
h2 a:hover::after
  content "↗"
// layout
#gradient
  z-index 1
  position fixed
  bottom 0
  height 100px
  width 100vw
  background linear-gradient(
    to top,
    alpha($pira-pink, 1.000) 0%,
    alpha($pira-pink, 0.987) 8.1%,
    alpha($pira-pink, 0.951) 15.5%,
    alpha($pira-pink, 0.896) 22.5%,
    alpha($pira-pink, 0.825) 29%,
    alpha($pira-pink, 0.741) 35.3%,
    alpha($pira-pink, 0.648) 41.2%,
    alpha($pira-pink, 0.550) 47.1%,
    alpha($pira-pink, 0.450) 52.9%,
    alpha($pira-pink, 0.352) 58.8%,
    alpha($pira-pink, 0.259) 64.7%,
    alpha($pira-pink, 0.175) 71%,
    alpha($pira-pink, 0.104) 77.5%,
    alpha($pira-pink, 0.049) 84.5%,
    alpha($pira-pink, 0.013) 91.9%,
    alpha($pira-pink, 0.000) 100%
  )
#left
  z-index 2
  padding 10px
  width 100px
  position fixed
  top 0
img#pira
  width 100%
#right
  z-index 2
  max-width 700px
  padding 10px
  position absolute
  top 0
  left 100px
  width calc(100vw - 100px)
table
  width 100%
  margin-bottom 10px
  text-align left
  padding 0
  border-collapse collapse
  th, td
    vertical-align top
    border-bottom 1px solid $pira-pink
    padding 2px 0
    width 50%
@media (max-width 600px)
  #left
    position absolute
    width 100px
    padding 10px
  #right
    left 0
    top 110px
    padding 10px
    width 100vw
@media (max-width 460px)
  td.user, th.user
    display none